<% @title='My Blog | Users' %>
<h1 class='text-center mt-2'>Users</h1>
<% if @users.empty? %>
  <div class="card mb-3 border-danger" style="width: 540px;">
    <div class="card-header bg-danger text-white">No User Found</div>
    <div class="card-body">
      <h5 class="card-title text-danger">There is no user please come again.</h5>
    </div>
  </div>
<% end %>
<% @users.each do |user| %>
  <%= link_to user_path(id: user.id), class:'nav-link' do%>
    <div class='mt-3 d-flex align-items-center flex-column'>
      <div class="card mb-3 border-primary" style="width: 680px;">
        <div class="row g-0">
          <div class="col-md-3">
            <img src="<%= user.photo %>" class="img-fluid rounded-start" alt="profile">
          </div>
          <div class="col-md-4">
            <div class="card-body">
              <h2 class="card-title"><%= user.name %></h2>
            </div>
            <div class='d-flex justify-content-end' style="width: 350px;">
              <h5>
            <span class="badge bg-primary position-relative shadow">
              Number of posts
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= user.posts_counter %>
              </span>
            </span>
          </h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
